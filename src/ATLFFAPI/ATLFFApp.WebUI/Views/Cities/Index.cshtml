@model IEnumerable<ATLFFApp.WebUI.Models.City>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Cities</h1>
<hr /><hr />

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
</p>
<hr />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Map Nodes</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTables_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <table class="table table-bordered" id="dataTable" cellspacing="0">
                    <thead>
                        <tr role="row">
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Latitude)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Longitude)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.iso)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Port)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Turnaround)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Latitude)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Longitude)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.iso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Port)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Turnaround)
                                </td>
                                @*<td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

</div>

